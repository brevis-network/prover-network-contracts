# Environment variables for Brevis Prover Network deployment
# Copy this file to .env and fill in the actual values

# ===== DEPLOYMENT CONFIGURATION =====
# Private key of the deployer account (pays gas fees and becomes initial owner)
PRIVATE_KEY=

# NOTE: The deployer will be the initial owner of all contracts.
# For production, transfer ownership to a multisig after deployment.

# ===== STAKING SYSTEM CONFIGURATION =====
# The ERC20 token used for staking
STAKING_TOKEN_ADDRESS=

# Unstaking delay in seconds (e.g., 604800 = 7 days)
UNSTAKE_DELAY=

# Minimum self-stake required for provers (in token units)
MIN_SELF_STAKE=

# Maximum slash percentage in basis points (e.g., 10000 = 10%)
MAX_SLASH_BPS=

# ===== BREVIS MARKET CONFIGURATION =====
# PicoVerifier contract address for proof verification
PICO_VERIFIER_ADDRESS=

# Bidding phase duration in seconds (e.g., 300 = 5 minutes)
BIDDING_PHASE_DURATION=

# Reveal phase duration in seconds (e.g., 600 = 10 minutes)  
REVEAL_PHASE_DURATION=

# Minimum fee for spam protection (in wei)
MIN_MAX_FEE=

# ===== BREVIS MARKET - OPTIONAL PARAMETERS =====
# Set to 0 or leave blank to disable these features

# Market slashing percentage for penalties in basis points (e.g., 1000 = 10%)
MARKET_SLASH_BPS=

# Time window for slashing after deadline in seconds (e.g., 604800 = 7 days)  
MARKET_SLASH_WINDOW=

# Protocol fee percentage in basis points (e.g., 100 = 1%, max 10000 = 100%)
MARKET_PROTOCOL_FEE_BPS=


# ===== OPTIONAL: FOR INDIVIDUAL DEPLOYMENTS ONLY =====
# These are only needed if deploying components separately (NOT recommended)
# The main DeployProverNetwork.s.sol script handles all integrations automatically

# StakingController proxy address (for individual VaultFactory deployment)
STAKING_CONTROLLER_ADDRESS=

# VaultFactory proxy address (for individual StakingController deployment)  
VAULT_FACTORY_ADDRESS=

